
<BaseMDNavigationItem>:

    MDNavigationItemIcon:
        icon: root.icon

    MDNavigationItemLabel:
        text: root.text


<BaseScreen>
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)

        MDButton:
            style: "filled"
            pos_hint: {"center_x": .95}
            on_release: root.parent.current = 'Home'

            MDButtonIcon:
                # x: text.x - (self.width + dp(10))
                icon: "home"

            MDButtonText:
                id: text

        MDLabel:
            text: root.name
            

            halign: "center"
            md_bg_color: (1,0,0,1)
                    
                    



MDBoxLayout:
    orientation: "vertical"
    md_bg_color: self.theme_cls.backgroundColor

    MDScreenManager:
        id: screen_manager

        # BaseScreen:
        #     name: "input"

        BaseScreen:
            name: 'Home'

        InputScreen:
            name: 'Solar Calc'
        

        BaseScreen:
            name: "Shop"
        
        BaseScreen:
            name: "Location"


        OutputScreen:
            name: 'output'

    MDNavigationBar:
        on_switch_tabs: app.on_switch_tabs(*args)

        BaseMDNavigationItem
            icon: "home"
            text: "Home"
            active: True

        BaseMDNavigationItem
            icon: "calculator"
            text: "Solar Calc"

            # active: True

        BaseMDNavigationItem
            icon: "cart"
            text: "Shop"
       
        BaseMDNavigationItem
            icon: "map"
            text: "Location"
        