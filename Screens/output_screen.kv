        text: "[color=000000][b][size=24px]" + root.label_name + "[/size][/b][/color]: " + root.text
        markup: True
        # halign: "left"
        size_hint: 1, None
        height: self.texture_size[1]
        md_bg_color: root.md_bg_color
        padding: [2, 5, 0, 2] # root.padding
