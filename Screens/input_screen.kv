
<InputScreen>:
    # name: "input"
    name: self.name


    MDBoxLayout:
        id:input_parent_box_layout
        orientation: "vertical"
        padding: [dp(20), dp(5), dp(30), dp(5)]


        MDButton:
            style: "filled"
            pos_hint: {"center_x": .95}
            on_release: root.parent.current = 'Home'
            id: input_home_button

            MDButtonIcon:
                # x: text.x - (self.width + dp(10))
                icon: "home"

            MDButtonText:
                id: text



        ScrollView:
            MDBoxLayout:
                id: text_field_box_layout

                padding: [dp(30), dp(5), dp(30), dp(5)]
                spacing: dp(17)
                size_hint_y: None
                height: self.minimum_height
                md_bg_color: [1,1,1,1]
                orientation: "vertical"
                # Text field for estimated load
            
                MDLabel:
                    text: "Solar System Input"
                    # font_style: "H4"
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDTextField:
                    mode: "filled"
                    id: estimated_load
                    on_text_validate: backup_hours.focus = True 
                    # font_size: "8sp"
                
                    MDTextFieldLeadingIcon:
                        icon: "weight"
                        theme_icon_color: "Custom"
                        icon_color_fucus: "Orange"

                    MDTextFieldTrailingIcon:
                        icon: "information"

                    MDTextFieldHintText:
                        text: "Enter Estimated Load (W)"

                    MDTextFieldHelperText:
                        text: "Load in watts (e.g., 1500)"
                        mode: "persistent"
                        # font_size: "8sp"


                    MDTextFieldMaxLengthText:
                        max_text_length: 10

                # Text field for backup hours
                MDTextField:
                    mode: "filled"
                    id:backup_hours
                    on_text_validate: peak_sun_hours.focus = True
                    
                    MDTextFieldLeadingIcon:
                        icon: "weight-lifter"
                        theme_icon_color: "Custom"
                        icon_color_fucus: "Orange"

                    MDTextFieldTrailingIcon:
                        icon: "information"

                    MDTextFieldHintText:
                        text: "Enter Backup Hours"

                    MDTextFieldHelperText:
                        text: "In Hours (e.g., 24)"
                        mode: "persistent"

                    MDTextFieldMaxLengthText:
                        max_text_length: 10

                # Text field for peak sun hours
                MDTextField:
                    mode: "filled"
                    id: peak_sun_hours  
                    on_text_validate: rating_of_panels.focus = True


                    MDTextFieldLeadingIcon:
                        icon: "solar-power"
                        theme_icon_color: "Custom"
                        icon_color_fucus: "Orange"

                    MDTextFieldTrailingIcon:
                        icon: "information"

                    MDTextFieldHintText:
                        text: "Enter Peak Sun Hours"
                        

                    MDTextFieldHelperText:
                        text: "Sun hours in your area (e.g., 5)"
                        mode: "persistent"

                    MDTextFieldMaxLengthText:
                        max_text_length: 2

                # Text field for rating of panels
                MDTextField:
                    mode: "filled"
                    id: rating_of_panels
                    on_text_validate: panel_efficiency.focus = True

                    MDTextFieldLeadingIcon:
                        icon: "solar-panel"
                        theme_icon_color: "Custom"
                        icon_color_fucus: "Orange"

                    MDTextFieldTrailingIcon:
                        icon: "information"

                    MDTextFieldHintText:
                        text: "Enter Rating of Panels (W)"

                    MDTextFieldHelperText:
                        text: "Panel rating in watts (e.g., 250)"
                        mode: "persistent"

                    MDTextFieldMaxLengthText:
                        max_text_length: 3

                # Text field for panel efficiency
                MDTextField:
                    mode: "filled"
                    id: panel_efficiency
                    on_text_validate: estimated_load.focus = True   

                    MDTextFieldLeadingIcon:
                        icon: "upload-network"
                        theme_icon_color: "Custom"
                        icon_color_fucus: "Orange"

                    MDTextFieldTrailingIcon:
                        icon: "information"

                    MDTextFieldHintText:
                        text: "Enter Panel Efficiency (%)"

                    MDTextFieldHelperText:
                        text: "Efficiency as a percentage (e.g., 85)"
                        mode: "persistent"

                    MDTextFieldMaxLengthText:
                        max_text_length: 2


                MDButton:
                    style: "outlined"
                    on_release: root.calculate()
                    pos_hint: {"center_x": 0.5}


                    MDButtonText:
                        text: "Calculate"
                        # theme_text_color: [0,0,0,1]









